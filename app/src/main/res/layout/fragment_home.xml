<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_list_24"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Libreria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tendencias"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:fontFamily="@font/roboto_bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_below="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/secondarytwo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artistas Populares"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/secondarytwo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Albumes Populares"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/secondarytwo">

                <TextView
                    android:id="@+id/numtrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:layout_below="@+id/numtrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tracks"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/numArtists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/numArtists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto"/>



            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>